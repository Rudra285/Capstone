
<CarItem>
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            id: transfer
            icon: "transfer"
            pos_hint: {"center_y": .5}

    MDCardSwipeFrontBox:

        ThreeLineIconListItem:
            id: name
            ripple_effect: True
            on_release: root.maintenance_screen(app)

            IconLeftWidget:
                icon: "car"


<BusinessHomeScreen>:
    name: 'business_home_screen'

    MDBoxLayout:
        MDLabel:
     	   id: email    
    
    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "vehicles"
            text: 'Vehicles Owned'
            icon: 'car-search'

            MDBoxLayout:
                orientation: "vertical"
                
                MDTopAppBar:
                    id: account_name
                    elevation: 4

                FitImage:
                    source: "assets/small_logo.png"
                    radius: root.radius
                    size_hint_x: None
                    width: root.height

                MDScrollView:
                    scroll_timeout: 100

                    MDList:
                        id: content
                        padding: 0

        MDBottomNavigationItem:
            name: "maintenance"
            text: 'Maintenance'
            icon: 'car-wrench'

            MDFloatLayout:
            	
                MDCard:
                    size_hint: .8, .8
                    pos_hint: {"center_x": .5, "center_y": .5}
                    
                    Carousel:
                        id: form

                        MDFloatLayout:
                            id: customer_info

                            MDTextField:
                                id: vin
                                hint_text: "Customers VIN"
                                size_hint_x: .8                               
                                pos_hint: {"center_x": .5, "center_y": .48}

                            MDTextField:
                                id: mileage
                                hint_text: "Customers vehicle km's"
                                size_hint_x: .8
                                pos_hint: {"center_x": .5, "center_y": .36}

                            MDRaisedButton:
                                text: "NEXT"
                                size_hint_x: .8
                                pos_hint: {"center_x": .5, "center_y": .2}
                                on_release: root.next()

                        MDFloatLayout:
                            id: maintenance_info
                            
                            MDLabel:
                            	id: maint_alert
                            	halign: "center"
                            	theme_text_color: "Error"
                            	bold: True
                            	pos_hint: {"center_y": 0.3}

                            MDTextField:
                                id: maint_performed
                                hint_text: "Maintenance Performed"
                                multiline: True
                                size_hint_x: .8
                                pos_hint: {"center_x": .5, "center_y": .48}
                                
                            MDTextField:
                                id: user_key
                                hint_text: "Your Private Key"
                                size_hint_x: .8
                                pos_hint: {"center_x": .5, "center_y": .36}

                            MDRaisedButton:
                                text: "PREVIOUS"
                                size_hint_x: .39
                                pos_hint: {"center_x": .3, "center_y": .2}
                                on_release: root.previous()

                            MDRaisedButton:
                                text: "SUBMIT"
                                size_hint_x: .39
                                pos_hint: {"center_x": .7, "center_y": .2}
                                on_release: root.submit()

                MDLabel:
                    text: "Maintenance Form"
                    bold: True
                    pos_hint: {"center_x": .8, "center_y": .8}
                    font_style: "H4"

                MDLabel:
                    id: customer_label
                    theme_text_color: "Custom"
                    text: "Customer"
                    pos_hint: {"center_x": .7, "center_y": .7}
                    font_style: "H6"
                    text_color: (1, 1, 1, 1)

                MDIconButton:
                    id: customer_icon
                    icon: "numeric-1-circle"
                    pos_hint: {"center_x": .25, "center_y": .65}
                    user_font_size: "35sp"
                    theme_text_color: "Custom"

                MDProgressBar:
                    id: progress_zero
                    size_hint_x: .4
                    pos_hint: {"center_x": .5, "center_y": .65}

                MDLabel:
                    id: maint_label
                    text: "Maintenance"
                    theme_text_color: "Custom"
                    pos_hint: {"center_x": 1.2, "center_y": .7}
                    font_style: "H6"
                    text_color: (1, 1, 1, 1)

                MDIconButton:
                    id: maint_icon
                    icon: "numeric-2-circle"
                    pos_hint: {"center_x": .75, "center_y": .65}
                    user_font_size: "35sp"
                    theme_text_color: "Custom"

        MDBottomNavigationItem:
            name: 'create vehicle'
            text: "Create Vehicle"
            icon: 'car'

            MDBoxLayout:
                orientation: 'vertical'

                Image:
                    source: "assets/logo.png"
                    size_hint: None, None
                    pos_hint: {"center_x": .5}
                    size: "300dp", "200dp"
                    allow_stretch: True

                MDBoxLayout:
                    orientation: "vertical"
                    id: dealer_create_car_box
                    cols: 1
                    
                    MDLabel:
                    	id: creation_alert
                    	halign: "center"
                    	theme_text_color: "Error"
                    	bold: True
                    	pos_hint: {"center_y": 0.7}

                    MDTextField:
                        id: create_car_make
                        hint_text: root.make_prompt
                        helper_text_mode: "persistent"
                        icon_left: "email"
                        size_hint_x: .6
                        pos_hint: {"center_x": .5}

                    MDTextField:
                        id: create_car_model
                        hint_text: root.model_prompt
                        helper_text_mode: "persistent"
                        icon_left: "key-variant"
                        size_hint_x: .6
                        pos_hint: {"center_x": .5}

                    MDTextField:
                        id: create_car_year
                        hint_text: root.year_prompt
                        helper_text_mode: "persistent"
                        icon_left: "account"
                        size_hint_x: .6
                        pos_hint: {"center_x": .5}

                    MDTextField:
                        id: create_car_vin
                        hint_text: root.vin_prompt
                        helper_text_mode: "persistent"
                        icon_left: "cellphone"
                        size_hint_x: .6
                        pos_hint: {"center_x": .5}

                    MDIconButton:
                        id: submit__icon_new_vehicle
                        icon: "plus-circle"
                        font_size: "150sp"
                        pos_hint: {"center_x": .5}
                        icon_size: "64sp"
                        on_press: root.onCreateVehicleClick()

        MDBottomNavigationItem:
            name: "notifications"
            text: 'Notifications'
            icon: 'email'

            MDBoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "There are no notifications at this time"
                    halign: "center"

        MDBottomNavigationItem:
            text: 'Logout'
            icon: 'logout'
            on_tab_press: root.logout(root, app)

<TransferPrompt>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
    	id: recipient
        hint_text: "New Owners Email"
        helper_text: "If entering multiple emails, separate by single space."
        icon_left: "email"
    
    MDTextField:
    	id: key
    	hint_text: "Enter Your Private Key"
        icon_left: "key-variant"
    
    MDLabel:
    	id: transfer_alert
    	halign: "center"
    	theme_text_color: "Error"
    	bold: True
    	pos_hint: {"center_y": 0.3}

<EscrowNotificationPrompt>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"
        
    MDTextField:
    	id: priv_key
    	hint_text: "Enter Your Private Key"
        icon_left: "key-variant"
