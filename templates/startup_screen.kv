<StartupScreen>:
    name: 'startup_screen'
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Image:
            source: "assets/logo.png"
            size_hint: None, None
            pos_hint: {"center_x": .5}
            size: "330dp", "260dp"
            allow_stretch: True

        MDBoxLayout:
            orientation: 'horizontal'
            padding: 30
            spacing: 60

            MDCard:
                padding: "8dp"

                Button:
                    text: "Personal Garage"
                    font_size: "20sp"
                    bold: True
                    background_normal: 'assets/personal.png'
                    background_color: (76/255, 175/255, 80/255, 1)
                    on_release: app.root.current = 'personal_login_screen'
                    
            MDCard:
                padding: "8dp"

                Button:
                    text: "Business Garage"
                    font_size: "20sp"
                    bold: True
                    background_normal: 'assets/business.png'
                    background_color: (76/255, 175/255, 80/255, 1)
                    on_release: app.root.current = 'business_login_screen'