<CarItemPersonal>
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    ripple_behavior: True
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            id: transfer_personal
            icon: "transfer"
            pos_hint: {"center_y": .5}

    MDCardSwipeFrontBox:

        ThreeLineIconListItem:
            id: name_personal
            ripple_effect: True
            on_release: root.maintenance_screen(app)

            IconLeftWidget:
                icon: "car"


<PersonalHomeScreen>:
    name: 'personal_home_screen'
    
    MDBoxLayout:
        MDLabel:
     	   id: email

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "vehicles"
            text: 'Vehicles Owned'
            icon: 'car-search'

            MDBoxLayout:
                orientation: "vertical"

                FitImage:
                    source: "assets/small_logo.png"
                    radius: root.radius
                    size_hint_x: None
                    width: root.height

                MDScrollView:
                    id: personal_scroll
                    scroll_timeout: 100

                    MDList:
                        id: content_personal
                        padding: 0

        MDBottomNavigationItem:
            name: "notifications"
            text: 'Notifications'
            icon: 'email'

            MDBoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "There are no notifications at this time"
                    halign: "center"

        MDBottomNavigationItem:
            name: "logout"
            text: 'Logout'
            icon: 'logout'
            on_tab_press: root.logout(root, app)

<TransferPersonalPrompt>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
    	id: recipient
        hint_text: "New Owners Email"
        icon_left: "email"
        helper_text: "If entering multiple emails, separate by single space."
        
    MDTextField:
    	id: key
    	hint_text: "Enter Your Private Key"
        icon_left: "key-variant"

<EscrowNotificationPrompt>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"
        
    MDTextField:
    	id: priv_key
    	hint_text: "Enter Your Private Key"
        icon_left: "key-variant"
