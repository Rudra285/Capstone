<CarItemPersonal>
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    ripple_behavior: True
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            id: transfer_personal
            icon: "transfer"
            pos_hint: {"center_y": .5}

    MDCardSwipeFrontBox:

        ThreeLineIconListItem:
            id: name_personal
            ripple_effect: True
            on_release: root.maintenance_screen(app)

            ImageLeftWidget:
                source: "assets/vehicleIcon.png"


<PersonalHomeScreen>:
    name: 'personal_home_screen'
    
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id: account_name
            elevation: 4
            right_action_items: [["logout", lambda x: root.logout(self, app)]] 

        Image:
            id: email
            source: "assets/logo.png"
            size_hint: None, None
            pos_hint: {"center_x": .5}
            size: "300dp", "200dp"
            allow_stretch: True

        MDScrollView:
            id: personal_scroll
            scroll_timeout: 100

            MDList:
                id: content_personal
                padding: 0


<TransferPersonalPrompt>
    orientation: "vertical"
    size_hint_y: None
    height: "120dp"

    MDTextField:
    	id: recipient
        hint_text: "New Owners Email"
        icon_left: "email"
        helper_text: "If entering multiple emails, separate by single space."
        
    MDTextField:
    	id: key
    	hint_text: "Enter Your Private Key"
        icon_left: "key-variant"
    
    MDLabel:
    	id: transfer_alert
    	halign: "center"
    	theme_text_color: "Error"
    	bold: True
    	pos_hint: {"center_y": 0.3}
