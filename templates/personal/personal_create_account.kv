<PersonalCreateAccountScreen>:
    name: 'personal_create_account_screen'

    MDBoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 20

        Image:
            source: "assets/logo.png"
            size_hint: None, None
            pos_hint: {"center_x": .5}
            size: "300dp", "200dp"
            allow_stretch: True

        MDBottomNavigation:
            name: "personal_create_account_to_login"
                
            MDBottomNavigationItem:
                name: 'back_to_login_personal'
                text: 'Back'
                icon: 'arrow-left-bold-outline'
                on_tab_release: app.root.current = 'personal_login_screen'

    MDFloatLayout:

        MDLabel:
            text: "Create your Personal Account below"
            theme_text_color: "Custom"
            font_style: "H6"
            text_color: 76/255, 175/255, 80/255, 1
            halign: "center"
            pos_hint: {"center_y": 0.6}

        MDTextField:
            id: personal_create_email
            hint_text: root.email_prompt
            helper_text_mode: "persistent"
            icon_left: "email"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: 0.6

        MDTextField:
            id: personal_create_name
            hint_text: root.name_prompt
            helper_text_mode: "persistent"
            icon_left: "account"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint_x: 0.6

        MDTextField:
            id: personal_create_password
            hint_text: root.password_prompt
            helper_text_mode: "persistent"
            password: True
            icon_left: "key-variant"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint_x: 0.6

        MDRaisedButton:
            text: root.btn_text
            size_hint: None, None
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            font_size: "18sp"
            width: root.width*0.2
            on_release: root.onClick()
            on_release: app.root.current = 'personal_login_screen'
