<PersonalCreateAccountScreen>:
    name: 'personal_create_account_screen'

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            elevation: 4
            title: app.title
            on_action_button: root.goBack()
            left_action_items: [["arrow-left-bold-outline", lambda x: root.goBack(app)]] 

        Image:
            source: "assets/logo.png"
            size_hint: None, None
            pos_hint: {"center_x": .5}
            size: "300dp", "200dp"
            allow_stretch: True

        MDFloatLayout:

            MDLabel:
                text: "Create your Personal Account below"
                theme_text_color: "Custom"
                font_style: "H6"
                text_color: 76/255, 175/255, 80/255, 1
                halign: "center"
                pos_hint: {"center_y": 0.9}

            MDTextField:
                id: personal_create_email
                hint_text: root.email_prompt
                helper_text_mode: "persistent"
                icon_left: "email"
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                size_hint_x: 0.6

            MDTextField:
                id: personal_create_name
                hint_text: root.name_prompt
                helper_text_mode: "persistent"
                icon_left: "account"
                pos_hint: {"center_x": 0.5, "center_y": 0.45}
                size_hint_x: 0.6

            MDTextField:
                id: personal_create_password
                hint_text: root.password_prompt
                helper_text_mode: "persistent"
                password: True
                icon_left: "key-variant"
                pos_hint: {"center_x": 0.5, "center_y": 0.2}
                size_hint_x: 0.6

        MDBottomAppBar:

            MDTopAppBar:
                icon: "check"
                type: "bottom"
                on_action_button: root.onClick()
