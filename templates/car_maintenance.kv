<Maintenance>
    text:root.maintenance
    secondary_text: root.owner
    tertiary_text: root.date
    
<Content>
    adaptive_height: True

    ThreeLineIconListItem:
        text: root.header
        secondary_text: root.subHeader
        tertiary_text: root.mileage

        IconLeftWidget:
            icon: 'account'

<CarMaintenanceScreen>:
    name: 'car_maintenance'

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            elevation: 4
            title: "Vehicle History"
            #on_action_button: root.goBack()
            left_action_items: [["arrow-left-bold-outline", lambda x: root.goBack(root, app)]]
            right_action_items: [["export", lambda x: root.export_pdf()]]            

        Image:
            source: "assets/small_logo.png"
            # radius: root.radius
            # size_hint_x: None
            # width: root.height
            size_hint: None, None
            pos_hint: {"center_x": .5}
            size: "300dp", "200dp"
            allow_stretch: True

        MDScrollView:

            MDList:
                id: content_maintenance
                padding: 0
