<CarItemPersonal>
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    ripple_behavior: True
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            id: transfer_personal
            icon: "transfer"
            pos_hint: {"center_y": .5}

    MDCardSwipeFrontBox:

        ThreeLineIconListItem:
            id: name_personal
            ripple_effect: True
            on_release: root.maintenance_screen(app)

            IconLeftWidget:
                icon: "car"


<PersonalHomeScreen>:
    name: 'personal_home_screen'
    
    MDBoxLayout:
        MDLabel:
     	   id: email

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "vehicles"
            text: 'Vehicles Owned'
            icon: 'car-search'

            MDBoxLayout:
                orientation: "vertical"

                FitImage:
                    source: "assets/small_logo.png"
                    radius: root.radius
                    size_hint_x: None
                    width: root.height

                MDScrollView:
                    scroll_timeout: 100

                    MDList:
                        id: content_personal
                        padding: 0

        MDBottomNavigationItem:
            text: 'Logout'
            icon: 'logout'
            on_tab_press: app.stop()

<TransferPersonalPrompt>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
    	id: recipient
        hint_text: "New Owners Email"
        
    MDTextField:
    	id: key
    	hint_text: "Enter Your Private Key"
